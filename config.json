{
    "rest": {
        "port": 8080,
        "body_limit": 12,
        "read_timeout": 10,
        "write_timeout": 10,
        "reduce_memory_usage": true
    },
    "log": {
        "level": "debug"
    },
    "database": {
        "postgresdb": {
            "host": "localhost",
            "port": 5432,
            "username": "postgres",
            "password": "postgres",
            "database": "postgres"
        },
        "mariadb": {
            "dsn": "root:root@tcp(localhost:3306)/maria?charset=utf8&parseTime=True&loc=UTC"
        },
        "mongodb": {
            "uri": "mongodb://localhost:27017",
            "db": "mongo",
            "connection_timeout": 10,
            "ping_timeout": 10
        }
    },
    "tracer_config": {
        "tracer": "jaeger",
        "environment": "development",
        "jaeger_url": "http://localhost:14268/api/traces",
        "jaeger_mode": "collector",
        "service": "poc"
    }
}